generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   Int                     @id @default(autoincrement())
  username             String                  @unique
  email                String                  @unique
  password             String
  role                 UserRole                @default(USER)
  createdAt            DateTime                @default(now())
  isActive             Boolean                 @default(true)
  comments             Comment[]
  notificationsAsUser  Notification[]          @relation("UserAsOwner")
  NotificationsAsActor Notification[]          @relation("UserAsActor")
  posts                Post[]
  PostReaction         PostReaction[]
  PostView             PostView[]
  Profile              Profile?
  ReportedPosts        ReportedPosts[]
  followedBy           UserFollows[]           @relation("followedBy")
  following            UserFollows[]           @relation("following")
  readingList          ReadingList[]
  publicationToUsers   PublicationToUser[]
  sentInvitations      PublicationInvitation[] @relation("InviterRelation")
  receivedInvitations  PublicationInvitation[] @relation("InviteeRelation")

  @@index([email])
  @@index([username])
}

model Publication {
  id                     Int                     @id @default(autoincrement())
  name                   String
  bio                    String?
  avatarUrl              String?
  posts                  Post[]
  publicationToUsers     PublicationToUser[]
  publicationInvitations PublicationInvitation[]
}

model PublicationToUser {
  userId        Int
  publicationId Int
  createdAt     DateTime    @default(now())
  user          User        @relation(references: [id], fields: [userId])
  publication   Publication @relation(references: [id], fields: [publicationId])
  isOwner       Boolean     @default(false)

  @@unique([userId, publicationId])
}

model PublicationInvitation {
  id            Int          @id @default(autoincrement())
  publicationId Int
  inviterId     Int
  inviteeId     Int
  status        InviteStatus @default(PENDING)
  createdAt     DateTime     @default(now())
  respondedAt   DateTime?

  publication   Publication    @relation(fields: [publicationId], references: [id])
  inviter       User           @relation("InviterRelation", fields: [inviterId], references: [id])
  invitee       User           @relation("InviteeRelation", fields: [inviteeId], references: [id])
  notifications Notification[]
}

enum InviteStatus {
  PENDING
  ACCEPTED
  DECLINED
}

model UserFollows {
  followedById Int
  followingId  Int
  followedAt   DateTime @default(now())
  followedBy   User     @relation("followedBy", fields: [followedById], references: [id], onDelete: Cascade, onUpdate: NoAction)
  following    User     @relation("following", fields: [followingId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@id([followingId, followedById])
}

model Profile {
  id        Int     @id @default(autoincrement())
  name      String
  avatarUrl String?
  bio       String? @db.VarChar(160)
  userId    Int     @unique
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Notification {
  id      Int              @id @default(autoincrement())
  userId  Int
  type    NotificationType
  message String
  isRead  Boolean          @default(false)
  postId  Int?

  createdAt               DateTime               @default(now())
  actorId                 Int
  user                    User                   @relation("UserAsOwner", fields: [userId], references: [id], onDelete: Cascade)
  actor                   User                   @relation("UserAsActor", fields: [actorId], references: [id], onDelete: Cascade)
  publicationInvitationId Int?
  publicationInvitation   PublicationInvitation? @relation(fields: [publicationInvitationId], references: [id])
  post                    Post?                  @relation(fields: [postId], references: [id])

  @@index([userId, isRead])
}

model ReportedPosts {
  postId    Int
  userId    Int
  createdAt DateTime @default(now())
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([postId, userId])
}

model SavedPost {
  id            Int         @id @default(autoincrement())
  createdAt     DateTime    @default(now())
  postId        Int
  readingListId Int
  post          Post        @relation(fields: [postId], references: [id], onDelete: Cascade)
  readingList   ReadingList @relation(fields: [readingListId], references: [id], onDelete: Cascade)

  @@unique([postId, readingListId])
  @@index([readingListId])
  @@index([postId])
}

model ReadingList {
  id         Int         @id @default(autoincrement())
  name       String
  createdAt  DateTime    @default(now())
  userId     Int
  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  savedPosts SavedPost[]

  @@unique([name, userId])
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    Int

  coverImageUrl String?
  status        PostStatus      @default(DRAFT)
  content       Json
  slug          String          @unique
  comments      Comment[]
  user          User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  PostReaction  PostReaction[]
  PostView      PostView[]
  ReportedPosts ReportedPosts[]
  postTopics    PostTopic[]
  publicationId Int?
  publication   Publication?    @relation(references: [id], fields: [publicationId], onDelete: SetNull)
  SavedPosts    SavedPost[]
  notifications Notification[]

  @@unique([title, userId])
  @@index([userId])
  @@index([status])
  @@index([createdAt])
  @@index([publicationId])
}

model PostTopic {
  postId  Int
  topicId Int
  post    Post  @relation(fields: [postId], references: [id], onDelete: Cascade)
  topic   Topic @relation(fields: [topicId], references: [id], onDelete: Cascade)

  @@unique([postId, topicId])
}

model Topic {
  id         Int         @id @default(autoincrement())
  name       String      @unique
  createdAt  DateTime    @default(now())
  postTopics PostTopic[]
}

model PostView {
  postId   Int
  userId   Int
  viewedAt DateTime @default(now())
  post     Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([postId, userId])
  @@index([userId])
  @@index([viewedAt])
}

model PostReaction {
  userId         Int
  postId         Int
  reactionTypeId Int
  reactedAt      DateTime     @default(now())
  post           Post         @relation(fields: [postId], references: [id], onDelete: Cascade)
  reactionType   ReactionType @relation(fields: [reactionTypeId], references: [id], onDelete: Cascade)
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, postId])
}

model Comment {
  id        Int      @id @default(autoincrement())
  content   String
  createdAt DateTime @default(now())
  isEdited  Boolean  @default(false)
  postId    Int
  userId    Int
  updatedAt DateTime @updatedAt
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([postId])
  @@index([userId])
}

model ReactionType {
  id               Int            @id @default(autoincrement())
  name             String         @unique
  reactionImageUrl String
  PostReaction     PostReaction[]
}

enum NotificationType {
  NEW_POST
  NEW_COMMENT
  PUBLICATION_INVITE
  POST_REACTION
  NEW_FOLLOW
}

enum PostStatus {
  DRAFT
  PENDING
  PUBLISHED
}

enum UserRole {
  USER
  ADMIN
}
